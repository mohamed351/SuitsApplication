@model WebShopping.Models.Brand

@{
    ViewData["Title"] = "Edit";
}
@section styles{
    <link href="~/lib/custome-cropper/cropper.min.css" rel="stylesheet" />
}
<h1>Edit</h1>

<h4>Brand</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="BrandArabic" class="control-label"></label>
                <input asp-for="BrandArabic" class="form-control" />
                <span asp-validation-for="BrandArabic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandEnglish" class="control-label"></label>
                <input asp-for="BrandEnglish" class="form-control" />
                <span asp-validation-for="BrandEnglish" class="text-danger"></span>
            </div>
          
           
         


            <div class="form-group">

                <div style="display:flex">
            
                    <div style="width:400px; height:400px;">
                        <img src="~/images/@Model.ImageUrl" style="width: 400px; width: 400px; ">
                </div>

                        <div style="width:400px; height:400px;">
                            <img id="image-src" src="" style="width: 400px; width: 400px; ">

                        </div>
             </div>

                  
                <input type="file" id="file" />
                <input type="hidden" />
                <input type="hidden" asp-for="ImageUrl" value="@Model.ImageUrl" />
               

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div class="modal fade" id="modal-default" tabindex="-1" role="dialog" aria-labelledby="modal-default" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-default-title">Crop Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="img-container">
                            <img src="" class="img-fluid" id="image-modal-cropper">

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="crop">Crop</button>
            </div>
        </div>

    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/lib/custome-cropper/cropper.min.js"></script>
    <script src="~/lib/custome-cropper/jquery-cropper.min.js"></script>
    <script src="~/lib/custome-cropper/custome-cropper.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>

    <script>
        $(document).ready(function () {
            customimageCropper({
                fileSelector: "#file",
                modelImageSelector: "#image-modal-cropper",
                sourceImageSelector: "#image-src",
                submitSelector: "#crop",
                aspectRatio: 1 / 1,
                minContainerWidth: 400,
                minContainerHeight: 400,
                maxCropBoxWidth: 400,
                maxCropBoxHeight: 400
            });
        });


        $("form").on("submit", () => {
            $("#ImageUrl").val($("#image-src").attr("src"));
           

        });
    </script>
}